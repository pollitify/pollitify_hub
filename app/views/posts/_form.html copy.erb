<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.textarea :content %>
  </div>

  <div>
    <%= form.label :post_type, style: "display: block" %>
    <%= form.number_field :post_type %>
  </div>

  <div>
    <%= form.label :verified, style: "display: block" %>
    <%= form.checkbox :verified %>
  </div>

  <div>
    <%= form.label :points_earned, style: "display: block" %>
    <%= form.number_field :points_earned %>
  </div>

  <div>
    <%= form.label :activity_date, style: "display: block" %>
    <%= form.datetime_field :activity_date %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
