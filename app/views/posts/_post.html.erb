<div id="<%= dom_id post %>">
  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Post type:</strong>
    <%= post.post_type %>
  </p>

  <p>
    <strong>Verified:</strong>
    <%= post.verified %>
  </p>

  <p>
    <strong>Points earned:</strong>
    <%= post.points_earned %>
  </p>

  <p>
    <strong>Activity date:</strong>
    <%= post.activity_date %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= post.location %>
  </p>

</div>
