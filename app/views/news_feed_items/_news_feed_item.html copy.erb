<!-- app/views/feed_items/_feed_item.html.erb -->
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= news_feed_item.title %></h5>
    <p class="card-text"><%= news_feed_item.content %></p>

    <!-- Voting buttons -->
    <div class="d-flex align-items-center mb-2">
      <%= button_to news_feed_item_votes_path(news_feed_item, value: 1), method: :post, class: "btn btn-sm btn-success me-1" do %>
        <i class="bi bi-hand-thumbs-up"></i> <%= news_feed_item.upvotes %>
      <% end %>

      <%= button_to news_feed_item_votes_path(news_feed_item, value: -1), method: :post, class: "btn btn-sm btn-danger me-2" do %>
        <i class="bi bi-hand-thumbs-down"></i> <%= news_feed_item.downvotes %>
      <% end %>

      <span class="badge bg-secondary">Score: <%= news_feed_item.score %></span>
    </div>

    <!-- Comments -->
    <div class="mt-3">
      <h6>Comments</h6>
      <%= render news_feed_item.comments %>

      <% if user_signed_in? %>
        <%= form_with model: [news_feed_item, Comment.new], local: true do |f| %>
          <div class="input-group mb-3">
            <%= f.text_field :body, class: "form-control", placeholder: "Add a comment..." %>
            <button class="btn btn-outline-secondary" type="submit">Post</button>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
