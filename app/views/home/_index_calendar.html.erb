<h2><%= @date.strftime("%B %Y") %></h2>

<div class="d-flex justify-content-between mb-3">
  <%#= link_to "« Previous", calendar_path(date: @date.prev_month), class: "btn btn-outline-secondary" %>
  <%#= link_to "Next »", calendar_path(date: @date.next_month), class: "btn btn-outline-secondary" %>
</div>

<%= month_calendar(events: @events, date: @date) do |event| %>
  <div class="badge bg-primary d-block mb-1">
    <%= event.name %>
  </div>
<% end %>