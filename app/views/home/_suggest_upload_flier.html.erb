<%= form_with(model: event, local: true) do |form| %>
  <%= form.hidden_field :suggested_event, value: true %>
  <%= form.hidden_field :event_type, value: 'suggested' %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset>
    <legend>
      Upload Your Event Flier
    </legend>
  <div class="mb-3">
    <%= form.label :files, "Upload your event flier and our OCR engine will try and read its text to add it for you " %>
    <%= form.file_field :files, multiple: true, style: "width: 100%;"  %>
  </div>
  </fieldset>

  <div class="text-center">
    <%= form.submit "Save suggested Event and Submit for Review!", class: "btn btn-primary" %>
  </div>
<% end %>