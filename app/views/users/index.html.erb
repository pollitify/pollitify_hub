<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Discover Activists</h3>
    <div class="text-muted">
      <small>Find and follow other activists in your community</small>
    </div>
  </div>

  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body text-center">
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar, class: "rounded-circle mb-3", 
                  style: "width: 80px; height: 80px; object-fit: cover;" %>
            <% else %>
              <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                   style="width: 80px; height: 80px;">
                <i class="fas fa-user fa-2x text-white"></i>
              </div>
            <% end %>
            
            <h6 class="card-title">
              <%= link_to user.display_name, user, class: "text-decoration-none" %>
            </h6>
            
            <% if user.location.present? %>
              <p class="text-muted small">
                <i class="fas fa-map-marker-alt"></i> <%= user.location %>
              </p>
            <% end %>
            
            <% if user.bio.present? %>
              <p class="card-text small text-muted">
                <%= truncate(user.bio, length: 80) %>
              </p>
            <% end %>
            
            <!-- Stats Row -->
            <div class="row text-center small mb-3">
              <div class="col-4">
                <strong><%= user.posts.count %></strong><br>
                <span class="text-muted">Posts</span>
              </div>
              <div class="col-4">
                <strong><%= user.followers.count %></strong><br>
                <span class="text-muted">Followers</span>
              </div>
              <div class="col-4">
                <strong class="text-success"><%= user.total_activism_points %></strong><br>
                <span class="text-muted">Points</span>
              </div>
            </div>
            
            <!-- Political Interests -->
            <% if user.political_interests.present? %>
              <div class="mb-3">
                <% user.political_interests_array.first(2).each do |interest| %>
                  <span class="badge bg-light text-dark me-1 small"><%= interest %></span>
                <% end %>
                <% if user.political_interests_array.size > 2 %>
                  <span class="badge bg-light text-muted small">+<%= user.political_interests_array.size - 2 %></span>
                <% end %>
              </div>
            <% end %>
            
            <!-- Follow Button -->
            <% if current_user.following?(user) %>
              <%= form_with model: current_user.active_relationships.find_by(followed_id: user.id), 
                  method: :delete, local: false, class: "d-inline" do |form| %>
                <%= form.submit "Following", class: "btn btn-outline-success btn-sm" %>
              <% end %>
            <% else %>
              <%= form_with model: Relationship.new, local: false, class: "d-inline" do |form| %>
                <%= form.hidden_field :followed_id, value: user.id %>
                <%= form.submit "Follow", class: "btn btn-primary btn-sm" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @users.respond_to?(:current_page) %>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @users %>
    </div>
  <% end %>
</div>