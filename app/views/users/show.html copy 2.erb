
<!-- app/views/users/show.html.erb -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <!-- Profile Card -->
      <div class="card">
        <div class="card-body text-center">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "rounded-circle mb-3", style: "width: 120px; height: 120px; object-fit: cover;" %>
          <% else %>
            <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 120px; height: 120px;">
              <i class="fas fa-user fa-3x text-white"></i>
            </div>
          <% end %>
          
          <h4 class="card-title"><%= @user.display_name %></h4>
          
          <% if @user.location.present? %>
            <p class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= @user.location %></p>
          <% end %>
          
          <!-- Follow/Unfollow Button -->
          <% if user_signed_in? && @user != current_user %>
            <div id="follow-button">
              <% if current_user.following?(@user) %>
                <%= form_with model: @relationship, method: :delete, local: false, class: "d-inline" do |form| %>
                  <%= form.submit "Unfollow", class: "btn btn-outline-secondary btn-sm" %>
                <% end %>
              <% else %>
                <%= form_with model: Relationship.new, local: false, class: "d-inline" do |form| %>
                  <%= form.hidden_field :followed_id, value: @user.id %>
                  <%= form.submit "Follow", class: "btn btn-primary btn-sm" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
          
          <!-- Edit Profile Button -->
          <% if @user == current_user %>
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-primary btn-sm" %>
          <% end %>
        </div>
        
        <!-- Stats -->
        <div class="card-footer bg-light">
          <div class="row text-center">
            <div class="col-4">
              <strong><%= @user.posts.count %></strong><br>
              <small class="text-muted">Posts</small>
            </div>
            <div class="col-4">
              <%= link_to following_user_path(@user), class: "text-decoration-none text-dark" do %>
                <strong><%= @user.following.count %></strong><br>
                <small class="text-muted">Following</small>
              <% end %>
            </div>
            <div class="col-4">
              <%= link_to followers_user_path(@user), class: "text-decoration-none text-dark" do %>
                <strong><%= @user.followers.count %></strong><br>
                <small class="text-muted">Followers</small>
              <% end %>
            </div>
          </div>
          
          <!-- Activism Points -->
          <div class="text-center mt-3 pt-3 border-top">
            <strong class="text-success"><%= @user.total_activism_points %></strong><br>
            <small class="text-muted">Activism Points</small>
          </div>
        </div>
      </div>
      
      <!-- Bio -->
      <% if @user.bio.present? %>
        <div class="card mt-3">
          <div class="card-header">
            <h6 class="mb-0">About</h6>
          </div>
          <div class="card-body">
            <p class="card-text"><%= simple_format(@user.bio) %></p>
          </div>
        </div>
      <% end %>
      
      <!-- Political Interests -->
      <% if @user.political_interests.present? %>
        <div class="card mt-3">
          <div class="card-header">
            <h6 class="mb-0">Political Interests</h6>
          </div>
          <div class="card-body">
            <% @user.political_interests_array.each do |interest| %>
              <span class="badge bg-primary me-1 mb-1"><%= interest %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-8">
      <!-- Posts -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Recent Activity</h5>
        <% if @user == current_user %>
          <%= link_to "New Post", new_post_path, class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
      
      <div id="posts">
        <% @posts.each do |post| %>
          <%= render 'posts/post_card', post: post %>
        <% end %>
      </div>
      
      <% if @posts.respond_to?(:current_page) %>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @posts %>
        </div>
      <% end %>
    </div>
  </div>
</div>