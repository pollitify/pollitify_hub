<div class="container mt-4">
  <div class="row">
    <!-- Header -->
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h3>Badges & Achievements</h3>
          <p class="text-muted">Track your activism journey and earn recognition</p>
        </div>
        <div class="text-end">
          <h4 class="text-primary"><%= @progress_stats[:completion_percentage] %>%</h4>
          <small class="text-muted">
            <%= @progress_stats[:earned_badges] %> of <%= @progress_stats[:total_badges] %> badges earned
          </small>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-4">
      <!-- Progress Card -->
      <div class="card mb-4">
        <div class="card-header">
          <h6 class="mb-0">Your Progress</h6>
        </div>
        <div class="card-body">
          <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-success" role="progressbar" 
                 style="width: <%= @progress_stats[:completion_percentage] %>%">
              <%= @progress_stats[:completion_percentage] %>%
            </div>
          </div>
          
          <div class="row text-center">
            <div class="col-6">
              <strong class="text-success"><%= current_user.total_activism_points %></strong><br>
              <small class="text-muted">Total Points</small>
            </div>
            <div class="col-6">
              <strong class="text-primary"><%= @earned_badges.count %></strong><br>
              <small class="text-muted">Badges Earned</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Achievements -->
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Recent Achievements</h6>
        </div>
        <div class="card-body">
          <% if @recent_achievements.any? %>
            <% @recent_achievements.each do |achievement| %>
              <div class="d-flex align-items-center mb-2">
                <div class="bg-warning rounded-circle p-2 me-3">
                  <i class="fas fa-<%= achievement.icon %> text-white"></i>
                </div>
                <div>
                  <small class="fw-bold"><%= achievement.display_name %></small><br>
                  <small class="text-muted"><%= time_ago_in_words(achievement.achieved_at) %> ago</small>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted small">No achievements yet. Keep being active!</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-8">
      <!-- Earned Badges -->
      <% if @earned_badges.any? %>
        <div class="mb-5">
          <h5 class="mb-3">Your Badges (<%= @earned_badges.count %>)</h5>
          <div class="row">
            <% @earned_badges.each do |badge| %>
              <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100 border-<%= badge.color %>">
                  <div class="card-body text-center">
                    <div class="bg-<%= badge.color %> rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px;">
                      <i class="fas fa-<%= badge.icon %> fa-2x text-white"></i>
                    </div>
                    <h6 class="card-title"><%= badge.name %></h6>
                    <p class="card-text small text-muted"><%= badge.description %></p>
                    <small class="text-success">
                      <i class="fas fa-check-circle"></i>
                      Earned <%= time_ago_in_words(badge.user_badges.find_by(user: current_user).earned_at) %> ago
                    </small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Available Badges by Category -->
      <% @badge_categories.each do |category| %>
        <% category_badges = @available_badges.by_category(category) %>
        <% next if category_badges.empty? %>
        
        <div class="mb-5">
          <h5 class="mb-3">
            <%= category.humanize.titleize %> Badges
            <small class="text-muted">(<%= category_badges.count %>)</small>
          </h5>
          <div class="row">
            <% category_badges.each do |badge| %>
              <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100 border-secondary">
                  <div class="card-body text-center">
                    <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px;">
                      <i class="fas fa-<%= badge.icon %> fa-2x text-white"></i>
                    </div>
                    <h6 class="card-title text-muted"><%= badge.name %></h6>
                    <p class="card-text small text-muted"><%= badge.description %></p>
                    
                    <!-- Progress Bar -->
                    <% progress = badge.progress_for(current_user) %>
                    <% percentage = badge.progress_percentage_for(current_user) %>
                    <div class="progress mb-2" style="height: 8px;">
                      <div class="progress-bar" role="progressbar" style="width: <%= percentage %>%"></div>
                    </div>
                    <small class="text-muted">
                      <%= progress %> / <%= badge.requirement_value %>
                      (<%= percentage %>%)
                    </small>
                    
                    <div class="mt-2">
                      <%= link_to "View Details", badge_path(badge), class: "btn btn-outline-primary btn-sm" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>